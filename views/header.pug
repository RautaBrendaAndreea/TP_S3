header.navbar
  .container.header-container
    h1.header-title AM's Intranet

    //- Vérifier si l'utilisateur est connecté
    if loggedInUser
      nav.header-nav
        //- Vérifier s'il est admin pour afficher le lien d'ajout d'utilisateur
        if loggedInUser.isAdmin
          a(href="/admin/add") Ajouter un utilisateur

        //- Liens pour utilisateur connecté
        a(href="/listing") Listing
        a(href="/edit") 
          img.profile-card(src=loggedInUser.photo, alt="Avatar et éditer le profil")
        form(action="/logout", method="POST", style="display: inline;")
          button.btn-secondary(type="submit") Déconnexion

    else
      //- Si non connecté, afficher le bouton de connexion
      nav.header-nav
        a(href="/login") Connexion